{
  "name": "task-tracker-backend",
  "version": "1.0.0",
  "description": "Task Tracker REST API - Node.js + TypeScript + Express + Mongoose + Redis",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
